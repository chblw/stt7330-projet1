library(kernlab)
library(readr)
angles <- runif(300, 0, 2 * pi)
library(dplyr)
radius <- runif(300, c(0, 5, 10), c(1, 7, 13))
circle_class <- rep(2:4, 100)
x <- radius * cos(angles)
y <- radius * sin(angles)
circle_data <- cbind(x, y)
plot(circle_data, col = circle_class, asp = 1)
